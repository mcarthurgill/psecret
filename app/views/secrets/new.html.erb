<br><%= link_to "Back to all secrets", secrets_path %>

<%= form_for @secret do |f| %>
	<%= f.label "Create a secret" %><br>
	<%= f.text_field :title, :placeholder => "Title of your secret" %><br>
	<%= f.text_field :content, :placeholder => "Content of your secret" %><br>
	<%= f.file_field :attachment %><br>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.submit %>
<% end %>